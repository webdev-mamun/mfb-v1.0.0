{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign scheme1 = settings.color_schemes | first %}

<div class="image-with-text container xl:container">
  <div class="col-span-full lg:col-span-5 py-1 order-last lg:order-last">
    {%- liquid
      assign image = section.settings.image
      assign mobile_image = section.settings.mobile_image
      if mobile_image == blank
        assign mobile_image = image
      endif
    -%}
    {%- if image != blank -%}
      {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
      {%- capture sizes -%}
        (min-width: 1440px) {{ 1440 | minus: 100 | divided_by: 2 }}px,
        (min-width: 750px) calc((100vw - 20px) / 2), calc((100vw -20px) / 2)
      {%- endcapture -%}
      {{
        image
        | image_url: width: 1920
        | image_tag: loading: 'lazy', class: 'hidden lg:block rounded-2xl', sizes: sizes, widths: widths
      }}
      {{
        mobile_image
        | image_url: width: 1920
        | image_tag: loading: 'lazy', class: 'lg:hidden mobile-image  rounded-2xl', sizes: sizes, widths: widths
      }}
    {%- else -%}
      {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg max-w-full' }}
    {%- endif -%}
  </div>
  <div class="col-span-full lg:col-span-5 pt-[3.8rem] pb-[3.5rem] order-first lg:order-last">
    {%- if section.settings.text != blank -%}
      <div class="image-with-text-text mb-2 font-sans big-text md:text-2xl xl:text-3xl">
        {% if section.settings.icon != blank -%}
          {{-
            section.settings.icon
            | image_url: width: 155
            | image_tag: loading: 'lazy', class: 'hidden xl:inline-block translate-y-[.3rem] mr-.5 float-left'
          -}}
          {{-
            section.settings.icon
            | image_url: width: 79
            | image_tag:
              loading: 'lazy',
              class: 'inline-block xl:hidden translate-y-[.5rem] md:translate-y-[1.1rem] mr-.5 float-left'
          -}}
        {%- endif -%}
        {{ section.settings.text }}
      </div>
    {%- endif -%}
    {%- if section.settings.link_text != blank -%}
      <a href="{{ section.settings.link_url }}" class="btn-link hidden lg:inline-block mb-4">
        {{- section.settings.link_text -}}
      </a>
    {%- endif -%}
    {%- if section.settings.btn_text_1 != blank or section.settings.btn_text_1 != blank -%}
      <div class="flex flex-wrap gap-1 lg:gap-2">
        {%- if section.settings.btn_text_1 != blank -%}
          <a href="{{ section.settings.btn_url_1 }}" class="btn">{{ section.settings.btn_text_1 }}</a>
        {%- endif -%}
        {%- if section.settings.btn_text_2 != blank -%}
          <a href="{{ section.settings.btn_url_2 }}" class="btn">{{ section.settings.btn_text_2 }}</a>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.image-with-text.name",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "t:sections.image-with-text.settings.mobile_image.label"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "t:sections.image-with-text.settings.icon.label"
    },
    {
      "type": "html",
      "id": "text",
      "default": "<h2>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</h2>",
      "label": "t:sections.image-with-text.settings.text.label"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "t:sections.image-with-text.settings.link_text.label",
      "default": "Learn more about us"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "t:sections.image-with-text.settings.link_url.label"
    },
    {
      "type": "header",
      "content": "t:sections.image-with-text.settings.button_header_1.label"
    },
    {
      "type": "text",
      "id": "btn_text_1",
      "label": "t:sections.image-with-text.settings.btn_text_1.label",
      "default": "SHOP WINES"
    },
    {
      "type": "url",
      "id": "btn_url_1",
      "label": "t:sections.image-with-text.settings.btn_url_1.label"
    },
    {
      "type": "header",
      "content": "t:sections.image-with-text.settings.button_header_2.label"
    },
    {
      "type": "text",
      "id": "btn_text_2",
      "label": "t:sections.image-with-text.settings.btn_text_2.label",
      "default": "SHOP SPIRITS"
    },
    {
      "type": "url",
      "id": "btn_url_2",
      "label": "t:sections.image-with-text.settings.btn_url_2.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.image-with-text.presets.name"
    }
  ]
}
{% endschema %}
