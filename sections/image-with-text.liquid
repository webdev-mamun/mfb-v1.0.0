{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign scheme1 = settings.color_schemes | first %}

<div class="image-with-text xl:container">
  <div class="col-span-full lg:col-span-5">
    {%- if section.settings.image != blank -%}
      {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
      {%- capture sizes -%}
        (min-width: 1440px) {{ 1440 | minus: 100 | divided_by: 2 }}px,
        (min-width: 750px) calc((100vw - 20px) / 2), calc((100vw -20px) / 2)
      {%- endcapture -%}
      {{ section.settings.image | image_url: width: 1920 | image_tag: loading: 'lazy', sizes: sizes, widths: widths }}
    {%- else -%}
      {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>
  <div class="col-span-full lg:col-span-5">
    <div class="h2"></div>
    <a class="btn-link"></a>
    <div class="flex gap-1 lg:gap-2">
      <a class="btn"></a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.image-with-text.name",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "html",
      "id": "text",
      "default": "<h2>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</h2>",
      "label": "t:sections.image-with-text.settings.text.label"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "t:sections.image-with-text.settings.link_text.label",
      "default": "Learn more about us"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "t:sections.image-with-text.settings.link_url.label"
    },
    {
      "type": "header",
      "content": "t:sections.image-with-text.settings.button_header_1.label"
    },
    {
      "type": "text",
      "id": "btn_text_1",
      "label": "t:sections.image-with-text.settings.btn_text_1.label",
      "default": "SHOP WINES"
    },
    {
      "type": "url",
      "id": "btn_url_1",
      "label": "t:sections.image-with-text.settings.btn_url_1.label"
    },
    {
      "type": "header",
      "content": "t:sections.image-with-text.settings.button_header_2.label"
    },
    {
      "type": "text",
      "id": "btn_text_2",
      "label": "t:sections.image-with-text.settings.btn_text_2.label",
      "default": "SHOP SPIRITS"
    },
    {
      "type": "url",
      "id": "btn_url_2",
      "label": "t:sections.image-with-text.settings.btn_url_2.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.image-with-text.presets.name"
    }
  ]
}
{% endschema %}
