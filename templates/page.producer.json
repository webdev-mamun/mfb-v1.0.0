{
  "sections": {
    "hero": {
      "type": "producer-page-hero",
      "settings": {
        "title": "{{ page.metafields.custom.producers.value.title.value }}",
        "name": "{{ page.metafields.custom.producers.value.name.value }}",
        "image": "{{ page.metafields.custom.producers.value.image.value }}",
        "mobile_image": "{{ page.metafields.custom.producers.value.image_mobile.value }}"
      }
    },
    "main": {
      "type": "producer-page-main",
      "settings": {
        "overview": "<p>{{ page.metafields.custom.producers.value.overview | metafield_tag }}<\/p>"
      }
    },
    "info": {
      "type": "producer-informetion",
      "settings": {
        "logo": "{{ page.metafields.custom.producers.value.information.value.logo.value }}",
        "country": "{{ page.metafields.custom.producers.value.information.value.country.value }}",
        "region": "{{ page.metafields.custom.producers.value.information.value.region.value }}",
        "appelation": "{{ page.metafields.custom.producers.value.information.value.appelation_s.value }}",
        "grapes": "<p>{{ page.metafields.custom.producers.value.information.value.grapes | metafield_tag }}<\/p>",
        "farming": "{{ page.metafields.custom.producers.value.information.value.farming.value }}",
        "production": "{{ page.metafields.custom.producers.value.information.value.annual_production.value }}",
        "geology": "{{ page.metafields.custom.producers.value.information.value.geology.value }}"
      }
    },
    "collection": {
      "type": "featured-collection",
      "settings": {
        "title": "Featured collection",
        "collection": "{{ page.metafields.custom.producers.value.collection.value }}",
        "btn": "SHOP ALL",
        "color_scheme": "background-2",
        "padding_top": 10,
        "padding_bottom": 10,
        "padding_top_desktop": 20,
        "padding_bottom_desktop": 20
      }
    }
  },
  "order": [
    "hero",
    "main",
    "info",
    "collection"
  ]
}
