{% comment %}theme-check-disable UndefinedObject{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="footer border-t border-[#C5C5C5] pt-2 pb-6">
  <div class="container lg:container">
    {%- if settings.footer_brand_image != blank -%}
      <div class="col-span-full">
        {%- assign brand_image_height = settings.footer_brand_image_width
          | divided_by: settings.footer_brand_image.aspect_ratio
        -%}
        <div
          class="footer-block__image-wrapper mx-auto"
          style="max-width: min(100%, {{ settings.footer_brand_image_width }}px);"
        >
          {{
            settings.footer_brand_image
            | image_url: width: 1100
            | image_tag:
              loading: 'lazy',
              class: 'min-w-[15.8rem]',
              widths: '50, 100, 150, 200, 300, 400, 550, 800, 1100',
              height: brand_image_height,
              width: settings.brand_image_width
          }}
        </div>
      </div>
    {%- endif -%}
    {%- liquid
      assign size = section.blocks.size
      assign col = 'grid-cols-1'
      if size == 5
        assign col = 'grid-cols-2 lg:grid-cols-10'
      elsif size == 4
        assign col = 'grid-cols-2 lg:grid-cols-4'
      elsif size == 3
        assign col = 'grid-cols-2 lg:grid-cols-9'
      elsif size == 2
        assign col = 'grid-cols-2'
      endif
    -%}
    <div class="col-span-full pt-3 gap-1 xl:gap-x-2 xl:gap-y-1 grid {{ col }}">
      {%- for block in section.blocks -%}
        {%- liquid
          assign col_class = 'col-span-full'
          if size == 5
            if block.type == 'newsletter'
              assign col_class = 'col-span-full lg:col-span-2'
            else
              assign col_class = 'col-span-1 lg:col-span-2'
            endif
          elsif size == 4
            if block.type == 'newsletter'
              assign col_class = 'col-span-full'
            else
              assign col_class = 'col-span-1 lg:col-span-2'
            endif
          elsif size == 3
            if block.type == 'newsletter'
              assign col_class = 'col-span-full lg:col-span-3'
            else
              assign col_class = 'col-span-1  lg:col-span-3'
            endif
          elsif size == 2
            if block.type == 'newsletter'
              assign col_class = 'col-span-full'
            else
              assign col_class = 'col-span-full'
            endif
          endif
        -%}
        <div class="{{ col_class }} mb-[1.5rem] lg:mb-0">
          <h3 class="text-md uppercase mb-.5">{{ block.settings.title }}</h3>
          {%- case block.type -%}
            {%- when 'address' -%}
              <address class="font-sans text-xs lg:text-md not-italic ps-2">{{ block.settings.address }}</address>
            {%- when 'link_list' -%}
              <ul role="list" class="flex flex-col gap-[.3rem] ps-2">
                {%- for link in block.settings.menu.links -%}
                  <li>
                    <a class="font-sans text-xs lg:text-md" href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {%- endfor -%}
              </ul>
            {%- when 'contact' -%}
              <div class="font-sans text-xs lg:text-md ps-2">{{ block.settings.subtext }}</div>
            {%- when 'social' -%}
              {%- render 'social-icons', class: 'ps-2' -%}
            {%- when 'newsletter' -%}
              {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form ps-2' -%}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="newsletter-form__field-wrapper">
                  <div class="field">
                    <input
                      id="NewsletterForm--{{ section.id }}"
                      type="email"
                      name="contact[email]"
                      class="field__input"
                      value="{{ form.email }}"
                      aria-required="true"
                      autocorrect="off"
                      autocapitalize="off"
                      autocomplete="email"
                      {% if form.errors %}
                        autofocus
                        aria-invalid="true"
                        aria-describedby="ContactFooter-error"
                      {% elsif form.posted_successfully? %}
                        aria-describedby="ContactFooter-success"
                      {% endif %}
                      placeholder="{{ 'newsletter.label' | t }}"
                      required
                    >
                    <label class="field__label" for="NewsletterForm--{{ section.id }}">
                      {{ 'newsletter.label' | t }}
                    </label>
                    <button
                      type="submit"
                      class="newsletter-form__button field__button"
                      name="commit"
                      id="Subscribe"
                      aria-label="{{ 'newsletter.button_label' | t }}"
                    >
                      {% render 'icon-arrow' %}
                    </button>
                  </div>
                  {%- if form.errors -%}
                    <small class="newsletter-form__message form__message" id="ContactFooter-error">
                      {%- render 'icon-error' -%}
                      {{- form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email -}}
                    </small>
                  {%- endif -%}
                </div>
                {%- if form.posted_successfully? -%}
                  <h3
                    class="newsletter-form__message newsletter-form__message--success form__message"
                    id="ContactFooter-success"
                    tabindex="-1"
                    autofocus
                  >
                    {% render 'icon-success' -%}
                    {{- 'newsletter.success' | t }}
                  </h3>
                {%- endif -%}
              {%- endform -%}
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
    <div class="footer__content-bottom-wrapper page-width{% if section.settings.enable_country_selector == false and section.settings.enable_language_selector == false %} footer__content-bottom-wrapper--center{% endif %}">
      <div class="footer__copyright caption">
        <small class="copyright__content"
          >&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url -}}
        </small>
        {%- if section.settings.show_policy -%}
          <ul class="policies list-unstyled">
            {%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <li>
                  <small class="copyright__content"
                    ><a href="{{ policy.url }}">{{ policy.title }}</a></small
                  >
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
    </div>
    <div></div>
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "max_blocks": 5,
  "blocks": [
    {
      "type": "address",
      "name": "t:sections.footer.blocks.address.name",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "default": "BASED IN",
          "label": "t:sections.footer.blocks.address.settings.heading.label"
        },
        {
          "type": "textarea",
          "id": "address",
          "default": "Washington, D.C. &<br> Paris, France",
          "label": "t:sections.footer.blocks.address.settings.subtext.label"
        }
      ]
    },
    {
      "type": "link_list",
      "name": "t:sections.footer.blocks.link_list.name",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "default": "MENU",
          "label": "t:sections.footer.blocks.link_list.settings.heading.label"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "t:sections.footer.blocks.link_list.settings.menu.label",
          "info": "t:sections.footer.blocks.link_list.settings.menu.info"
        }
      ]
    },
    {
      "type": "contact",
      "name": "t:sections.footer.blocks.contact.name",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "default": "SAY HELLO",
          "label": "t:sections.footer.blocks.contact.settings.heading.label"
        },
        {
          "type": "html",
          "id": "subtext",
          "default": "<a href=\"mailto:hello@drinkmfb.com\">hello@drinkmfb.com</a>",
          "label": "t:sections.footer.blocks.contact.settings.subtext.label"
        }
      ]
    },
    {
      "type": "social",
      "name": "t:sections.footer.blocks.social.name",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "default": "FOLLOW US",
          "label": "t:sections.footer.blocks.social.settings.heading.label"
        },
        {
          "type": "header",
          "content": "t:sections.footer.blocks.social.settings.heading.info"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "t:sections.footer.blocks.newsletter.name",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "default": "JOIN THE LIST",
          "label": "t:sections.footer.blocks.newsletter.settings.heading.label"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "t:sections.footer.settings.header__8.content",
      "info": "t:sections.footer.settings.header__8.info"
    },
    {
      "type": "checkbox",
      "id": "show_policy",
      "default": false,
      "label": "t:sections.footer.settings.show_policy.label"
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "address"
      },
      {
        "type": "link_list"
      },
      {
        "type": "contact"
      },
      {
        "type": "social"
      },
      {
        "type": "newsletter"
      }
    ]
  }
}
{% endschema %}
