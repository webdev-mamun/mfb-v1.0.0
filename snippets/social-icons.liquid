{% comment %}
  Renders social icons.
  Accepts:
  - class: {String} a class to be added to the <ul> element (optional).

  Usage:
  {% render 'social-icons',
    class: 'my-class'
  %}
{% endcomment %}

<ul class="flex flex-col gap-[.3rem] {{ class }}" role="list">
  {%- if settings.social_facebook_link != blank -%}
    <li class="list-social__item">
      <a class="{{ font_style }}" href="{{ settings.social_facebook_link }}" class="link list-social__link">
        {{ settings.social_facebook_text }}
      </a>
    </li>
  {%- endif -%}
